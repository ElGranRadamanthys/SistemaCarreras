@page
@model SistemaCarreras.Pages.Carreras.CreateModel
@{
}

<form method="post">
	<div class="form-group">
		<label asp-for="Carrera.Nombre"></label>
		<input asp-for="Carrera.Nombre" class="form-control" />
        <span asp-validation-for="Carrera.Nombre" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Carrera.DuracionAnios"></label>
		<input asp-for="Carrera.DuracionAnios" class="form-control" />
		<span asp-validation-for="Carrera.DuracionAnios" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Carrera.TituloOtorgado"></label>
		<input asp-for="Carrera.TituloOtorgado" class="form-control" />
		<span asp-validation-for="Carrera.TituloOtorgado" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Carrera.Modalidad"></label>
        <span asp-validation-for="Carrera.Modalidad" class="text-danger"></span>
		<select asp-for="Carrera.Modalidad" asp-items="@(new SelectList(Model.Modalidades))" 
		class="form-control">
			<option value="">Seleccione una modalidad</option>
		</select>
			
	</div>

	<button type="submit" class="btn btn-primary">Guardar</button>
</form>