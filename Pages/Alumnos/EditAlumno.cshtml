@page
@model SistemaCarreras.Pages.AlumnosCreate.EditAlumnoModel
@{
}

<form method="post">
	<input type="hidden" asp-for="Alumno.Id" />
	<input type="hidden" asp-for="Alumno.Dni" />
	<input type="hidden" asp-for="Alumno.FechaNacimiento" />

	<div asp-validation-summary="All"></div>

	<div class="form-group">
		<label asp-for="Alumno.Nombre"></label>
		<input asp-for="Alumno.Nombre" class="form-control" />
		<span asp-validation-for="Alumno.Nombre" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Alumno.Apellido"></label>
		<input asp-for="Alumno.Apellido" class="form-control" />
		<span asp-validation-for="Alumno.Apellido" class="text-danger"></span>
	</div>

	<div class="form-group">
		<label asp-for="Alumno.Email"></label>
		<input asp-for="Alumno.Email" class="form-control" />
		<span asp-validation-for="Alumno.Email" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Guardar</button>
</form>