@page
@model SistemaCarreras.Pages.AlumnosCreate.IndexAlumnoModel
@{
	ViewData["Title"] = "Listado de Alumnos";
}

<a asp-page="CreateAlumno" class="btn btn-success mb-3">Agregar alumno</a>
@if (Model.Alumnos.Count == 0)
{
    <p>No hay alumnos cargados</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Dni</th>
                <th>Fecha de Nacimiento</th>
				<th>Email</th>
				<th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var alumno in Model.Alumnos)
            {
                <tr>
                    <td>@alumno.Id</td>
                    <td>@alumno.Nombre</td>
                    <td>@alumno.Apellido</td>
                    <td>@alumno.Dni</td>
                    <td>@alumno.FechaNacimiento</td>
					<td>@alumno.Email</td>
                    <td>
                        <a asp-page="EditAlumno" asp-route-id="@alumno.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-page="DeleteAlumno" asp-route-id="@alumno.Id" class="btn btn-danger btn-sm">Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}